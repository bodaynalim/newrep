@using System
@using System.Collections.Generic
@using GuestBookMVC.Models
@using Microsoft.AspNetCore.Identity.EntityFrameworkCore
@using Microsoft.AspNetCore.Mvc.Rendering
@using Microsoft.EntityFrameworkCore.Internal
@model GuestBookMVC.ViewModels.ChangeUserDataViewModel

    @if (User.Identity.IsAuthenticated)
    { <p>@User.Identity.Name</p>
       
  

    <h2>Изменение пароля для пользователя </h2>
    <form asp-action="ChangePassword" asp-controller="ChangeData" enctype="multipart/form-data" class="form-horizontal">
    <div asp-validation-summary="All" class="text-danger"></div>
 
    <input type="hidden" asp-for="Email" value="@User.Identity.Name"/>
    <div class="form-group">
        <label asp-for="Town" class="control-label">Город</label>
        <div class="col-md-4">
            <input type="text" asp-for="Town" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="OldPassword" class="control-label">Старый пароль</label>
    <div class="col-md-4">
        <input type="text" asp-for="OldPassword" class="form-control" />
    </div>
    </div>
    <div class="form-group">
        <label asp-for="NewPassword" class="control-label">Новый пароль</label>
        <div class="col-md-4">
            <input type="text" asp-for="NewPassword" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label  class="control-label">Choose Avatar</label>
        <div class="col-md-4">
            <input type="file" name="uploadedFile" class="form-control"/>
        </div>
    </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Save"/>
            </div>
        </div>
</form>


    @section scripts{

        @Html.Partial("_ValidationScriptsPartial")

    }

       
    }
