@using System
@using System.Collections.Generic
@using Microsoft.AspNetCore.Mvc.Rendering
@model IEnumerable<GuestBookMVC.Models.Phones>

  

<form method="post" class="form-horizontal" role="form">
    <div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="@(new GuestBookMVC.Models.Phones().Name)" class="col-md-2 control-label"></label>
            <div class="col-md-4">
                <input type="text" asp-for="@(new GuestBookMVC.Models.Phones().Name)" value ="" class="form-control" />
            </div>
            <span asp-validation-for="@(new GuestBookMVC.Models.Phones().Name)"></span>
        </div>
        <div class="form-group">
            <label asp-for="@(new GuestBookMVC.Models.Phones().Email)" class="col-md-2 control-label"></label>
            <div class="col-md-4">
                <input type="text" asp-for="@(new GuestBookMVC.Models.Phones().Email)" value ="" class="form-control" />
            </div>
            <span asp-validation-for="@(new GuestBookMVC.Models.Phones().Email)"></span>
        </div>
        <div class="form-group">
            <label asp-for="@(new GuestBookMVC.Models.Phones().MessageEmail)" class="col-md-2 control-label"></label>
            <div class="col-md-4">
                <textarea cols="20" type="text" rows="2" asp-for="@(new GuestBookMVC.Models.Phones().MessageEmail)" value ="" class="form-control" ></textarea>
            </div>
            <span asp-validation-for="@(new GuestBookMVC.Models.Phones().MessageEmail)"></span>
        </div>
      <input type="hidden" asp-for="@(new GuestBookMVC.Models.Phones().Date)" value ="@DateTime.Now.ToString()" class="form-control" />
       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Отправить" />
            </div>
        </div>
    </div>
</form>


@section scripts{
 
@Html.Partial("_ValidationScriptsPartial")

}

<hr />

<h3>List of messages</h3>

<br /><br/>
<table class="table-condensed">
    <tr>
        <td>Name</td>
        <td>Email</td>
        <td>Message</td>
        <td>Date</td>
        <td>Delete</td>
        <td>Edit</td>
    </tr>
    @foreach (var phone in Model)
    {
        <tr>
            <td>@phone.Name</td>
            <td>@phone.Email</td>
            <td>@phone.MessageEmail</td>
            <td>@phone.Date</td>
           
           @if (ViewBag.id == true || Context.Request.Cookies[phone.Name] == phone.MessageEmail)
            {
                <td><a asp-action="Delete" asp-controller="Home" asp-route-id="@phone.Id">Delete</a></td>
                <td><a href="~/Home/Edit/@phone.Id">Edit</a></td>
            }
        </tr>
    }
</table>







