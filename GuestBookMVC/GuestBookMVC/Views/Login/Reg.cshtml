@model GuestBookMVC.ViewModels.RegistrationViewModel
@using Microsoft.AspNetCore.Mvc.Rendering

    <h2>Регистрация нового пользователя</h2>
<form method="post" class="form-horizontal" role="form" asp-controller="Login" asp-action="Reg">
    
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Email" class="col-md-2 control-label"></label>
        <div class="col-md-4">
            <input asp-for="Email" class="form-control" />
        </div>
        <span asp-validation-for="Email"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Town" class="col-md-2 control-label"></label>
        <div class="col-md-4">
            <input asp-for="Town" class="form-control" />
        </div>
        <span asp-validation-for="Town"></span>
    </div>
       
    <div class="form-group">
            <label asp-for="Password" class="col-md-2 control-label"></label>
        <div class="col-md-4">
            <input asp-for="Password" class="form-control" />
        </div>
            <span asp-validation-for="Password"></span>
       
        </div>
        <div class="form-group"> 
            <label asp-for="PasswordConfirm" class="col-md-2 control-label"></label>
        <div class="col-md-4">
            <input asp-for="PasswordConfirm" class="form-control" />
        </div>
            <span asp-validation-for="PasswordConfirm"></span>
        </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Регистрация" />
        </div>
    </div>
    </form>

@section scripts{

    @Html.Partial("_ValidationScriptsPartial")

}
